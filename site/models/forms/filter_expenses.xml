<form>

    <fields name="filter">

        <field
            name="site"
            type="subform"
        />

        <field
            name="year"
            type="year"
            datafield="date_on"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_YEAR</option>
        </field>

        <field
            name="month"
            type="month"
            datafield="date_on"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_MONTH</option>
        </field>

        <field
            name="yearoff"
            type="yearoff"
            datafield="date_off"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_YEAROFF</option>
        </field>

        <field
            name="monthoff"
            type="monthoff"
            datafield="date_off"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_MONTHOFF</option>
        </field>

        <field
            name="yearout"
            type="yearout"
            datafield="date_out"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_YEAROUT</option>
        </field>

        <field
            name="monthout"
            type="monthout"
            datafield="date_out"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_EXPENSE_MONTHOUT</option>
        </field>

        <field
            name="id_domain"
            type="domain"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_DOMAIN</option>
        </field>

        <field
            name="id_currency"
            type="currency"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_CURRENCY</option>
        </field>

        <field
            name="id_commodity"
            type="commodity"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_COMMODITY</option>
        </field>

        <field
            name="id_type"
            type="type"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_TYPE</option>
        </field>

        <field
            name="id_unit"
            type="unit"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_UNIT</option>
        </field>

        <field
            name="id_vendor"
            type="vendor"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_VENDOR</option>
        </field>

        <field
            name="id_location"
            type="location"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_LOCATION</option>
        </field>

        <field
            name="id_project"
            type="project"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_PROJECT</option>
        </field>

    </fields>

    <fields name="list">

        <field
            name="fullordering"
            type="hidden"
            default="date_on DESC"
        />

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            onchange="this.form.submit();"
        />

    </fields>

</form>
