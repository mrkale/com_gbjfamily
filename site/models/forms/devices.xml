<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Default type for searching is string. -->
        <field
            name="title"
            label="COM_GBJFAMILY_FIELD_DEVICE_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="alias"
            label="COM_GBJFAMILY_FIELD_DEVICE_ALIAS_LABEL"
        />

        <field
            name="brandname"
            label="COM_GBJFAMILY_FIELD_DEVICE_BRANDNAME_LABEL"
        />

        <field
            name="serial"
            label="COM_GBJFAMILY_FIELD_DEVICE_SERIAL_LABEL"
        />

        <field
            name="eth_mac"
            label="COM_GBJFAMILY_FIELD_DEVICE_ETHMAC_LABEL"
        />

        <field
            name="eth_ip4"
            label="COM_GBJFAMILY_FIELD_DEVICE_ETHIP4_LABEL"
        />

        <field
            name="eth_ifc"
            label="COM_GBJFAMILY_FIELD_DEVICE_ETHIFC_LABEL"
        />

        <field
            name="wifi_mac"
            label="COM_GBJFAMILY_FIELD_DEVICE_WIFIMAC_LABEL"
        />

        <field
            name="wifi_ip4"
            label="COM_GBJFAMILY_FIELD_DEVICE_WIFIIP4_LABEL"
        />

        <field
            name="wifi_ifc"
            label="COM_GBJFAMILY_FIELD_DEVICE_WIFIIFC_LABEL"
        />

        <field
            name="id_device_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DEVICE_LABEL"
            width="6%"
            tooltip="id_device_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_vendor_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_VENDOR_LABEL"
            width="6%"
            tooltip="id_vendor_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_location_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_LOCATION_LABEL"
            width="6%"
            tooltip="id_location_title"
            defaulted="false"
        >
        </field>

        <field
            name="modified"
            type="date"
            label="JGLOBAL_MODIFIED_DATE"
            labelclass="hidden-phone"
            class="hidden-phone"
            width="10%"
            format="LIB_GBJ_FORMAT_TIMESTAMP"
        />

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
