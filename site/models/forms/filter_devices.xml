<form>

    <fields name="filter">

        <field
            name="site"
            type="subform"
        />

        <field
            name="id_device"
            type="Device"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_DEVICE</option>
        </field>

        <field
            name="id_vendor"
            type="Vendor"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_VENDOR</option>
        </field>

        <field
            name="id_location"
            type="Location"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_LOCATION</option>
        </field>

    </fields>

    <fields name="list">

        <field
            name="fullordering"
            type="hidden"
            default="title ASC"
        />

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            onchange="this.form.submit();"
        />

    </fields>

</form>
