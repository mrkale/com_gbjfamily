<form>

    <fields name="filter">
        <field
            name="search"
            label="JSEARCH_FILTER_LABEL"
            description="LIB_GBJ_SEARCH_VALUE_DESC"
            hint="JSEARCH_FILTER"
            class="js-stools-search-string"
            noresults="JGLOBAL_NO_MATCHING_RESULTS"
        />

        <field
            name="state"
            type="list"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="*">JALL</option>
            <option value="1">JPUBLISHED</option>
            <option value="2">JARCHIVED</option>
        </field>

        <field
            name="featured"
            type="list"
            label="LIB_GBJ_SELECT_FEATURED"
            onchange="this.form.submit();"
        >
            <option value="">LIB_GBJ_SELECT_FEATURED</option>
            <option value="1">LIB_GBJ_FEATURED</option>
            <option value="0">LIB_GBJ_UNFEATURED</option>
        </field>

        <field
            name="id_device"
            type="Device"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_DEVICE</option>
        </field>

        <field
            name="id_vendor"
            type="Vendor"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_VENDOR</option>
        </field>

        <field
            name="id_location"
            type="Location"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_LOCATION</option>
        </field>

    </fields>

    <fields name="list">

        <field
            name="fullordering"
            type="hidden"
            default="title ASC"
        />

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            onchange="this.form.submit();"
        />

    </fields>

</form>
