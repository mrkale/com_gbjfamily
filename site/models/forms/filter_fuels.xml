<form>

    <fields name="filter">

        <field
            name="site"
            type="subform"
        />

        <field
            name="year"
            type="Year"
            datafield="date_on"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_YEAR</option>
        </field>

        <field
            name="month"
            type="Month"
            datafield="date_on"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_MONTH</option>
        </field>

        <field
            name="id_domain"
            type="Domain"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_DOMAIN</option>
        </field>

        <field
            name="id_vendor"
            type="Vendor"
            onchange="this.form.submit();"
        >
            <option value="">COM_GBJFAMILY_SELECT_VENDOR</option>
        </field>

    </fields>

    <fields name="list">

        <field
            name="fullordering"
            type="hidden"
            default="date_on DESC"
        />

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            onchange="this.form.submit();"
        />

    </fields>

</form>
