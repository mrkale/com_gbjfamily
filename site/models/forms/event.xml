<form>
    <fieldset name="gridfields">

        <field
            name="date_on"
            type="date"
            label="LIB_GBJ_FIELD_DATE_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="duration"
            type="number"
            label="COM_GBJFAMILY_EVENT_DURATION_LABEL"
            format="COM_GBJFAMILY_EVENT_DURATION_FORMAT"
            suffix="LIB_GBJ_UNIT_HOURS"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_title"
            tooltip="id_domain_alias"
        >
        </field>

        <field
            name="id_activity"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_ACTIVITY_LABEL"
            datafield="id_activity_title"
            tooltip="id_activity_alias"
        >
        </field>

        <field
            name="id_stage"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAGE_LABEL"
            datafield="id_stage_title"
            tooltip="id_stage_alias"
        >
        </field>

        <field
            name="id_project"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_PROJECT_LABEL"
            datafield="id_project_title"
            tooltip="id_project_alias"
        >
        </field>

        <field
            name="update_site"
            type="subform"
        />

    </fieldset>
</form>
