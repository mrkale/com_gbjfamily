<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Defaul type for searching is string. -->
        <field
            name="title"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="alias"
            label="LIB_GBJ_FIELD_ALIAS_LABEL"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="events"
            type="number"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_EVENTS_LABEL"
            default="JNONE"
        />

        <field
            name="events_start"
            type="date"
            label="LIB_GBJ_FIELD_DATEON_LABEL"
            format="LIB_GBJ_FORMAT_DATE_SHORT_DAY"
            defaulted="false"
        />

        <field
            name="events_stop"
            type="date"
            label="LIB_GBJ_FIELD_DATEOFF_LABEL"
            format="LIB_GBJ_FORMAT_DATE_SHORT_DAY"
            defaulted="false"
        />

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
