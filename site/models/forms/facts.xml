<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Defaul type for searching is string. -->
        <field
            name="title"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="alias"
            label="COM_GBJFAMILY_FIELD_FACT_ALIAS_LABEL"
        />

        <field
            name="date_on"
            type="date"
            label="COM_GBJFAMILY_FIELD_FACT_DATEON_LABEL"
            format="LIB_GBJ_FORMAT_DATE_SHORT"
            defaulted="false"
        />

        <field
            name="date_off"
            type="date"
            label="COM_GBJFAMILY_FIELD_FACT_DATEOFF_LABEL"
            format="LIB_GBJ_FORMAT_DATE_SHORT"
            defaulted="false"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_info"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_INFO_LABEL"
            datafield="id_info_alias"
            tooltip="id_info_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_project"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_PROJECT_LABEL"
            datafield="id_project_alias"
            tooltip="id_project_title"
            defaulted="false"
        >
        </field>

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
