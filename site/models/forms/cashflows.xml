<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Default type for searching is string. -->
        <field
            name="title"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="period"
            type="number"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_PERIOD_GRID_LABEL"
        />

        <field
            name="price"
            type="number"
            label="LIB_GBJ_FIELD_PRICE_LABEL"
            format="LIB_GBJ_FIELD_PRICE_FORMAT"
            class="pull-right"
            labelclass="gbj-right"
        />

        <field
            name="price_month"
            type="number"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_PRICEMONTH_LABEL"
            format="LIB_GBJ_FIELD_PRICE_FORMAT"
            class="pull-right"
            labelclass="gbj-right"
            defaulted="false"
        />

        <field
            name="iban"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_IBAN_LABEL"
        />

        <field
            name="varsymb"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_VARSYMB_LABEL"
        />

        <field
            name="specsymb"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_SPECSYMB_LABEL"
        />

        <field
            name="billspan"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_BILLSPAN_LABEL"
        />

        <field
            name="payspan"
            label="COM_GBJFAMILY_FIELD_CASHFLOW_PAYSPAN_LABEL"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_vendor"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_VENDOR_LABEL"
            datafield="id_vendor_alias"
            tooltip="id_vendor_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_payform"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_PAYFORM_LABEL"
            datafield="id_payform_alias"
            tooltip="id_payform_title"
            defaulted="false"
        >
        </field>

        <field
            name="modified"
            type="date"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
