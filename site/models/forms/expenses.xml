<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Defaul type for searching is string. -->
        <field
            name="title"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="date_on"
            type="date"
            label="COM_GBJFAMILY_FIELD_EXPENSE_DATEON_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="date_off"
            type="date"
            label="COM_GBJFAMILY_FIELD_EXPENSE_DATEOFF_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
            defaulted="false"
        />

        <field
            name="date_out"
            type="date"
            label="COM_GBJFAMILY_FIELD_EXPENSE_DATEOUT_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
            defaulted="false"
        />

        <field
            name="period"
            type="string"
            label="COM_GBJFAMILY_FIELD_EXPENSE_PERIOD_LABEL"
            format="LIB_GBJ_FIELD_PERIOD_FORMAT"
            class="gbj-right"
            labelclass="gbj-right"
            defaulted="false"
        />

        <field
            name="lifespan"
            type="string"
            label="COM_GBJFAMILY_FIELD_EXPENSE_LIFESPAN_LABEL"
            format="LIB_GBJ_FIELD_PERIOD_FORMAT"
            suffix="lifeperiod"
            class="gbj-right"
            labelclass="gbj-right"
            defaulted="false"
        />

        <field
            name="quantity"
            type="number"
            label="COM_GBJFAMILY_FIELD_EXPENSE_QUANTITY_LABEL"
            suffix="id_unit_alias"
        />

        <field
            name="price"
            type="number"
            label="LIB_GBJ_FIELD_PRICE_LABEL"
            format="LIB_GBJ_FIELD_PRICE_FORMAT"
            class="gbj-right"
            labelclass="gbj-right"
        />

        <field
            name="price_unit"
            type="number"
            label="COM_GBJFAMILY_FIELD_EXPENSE_PRICEUNIT_LABEL"
            format="LIB_GBJ_FIELD_PRICE_FORMAT"
            prefix="LIB_GBJ_UNIT_PRICE"
            class="gbj-right"
            labelclass="gbj-right"
            defaulted="false"
        />

        <field
            name="price_orig"
            type="number"
            label="COM_GBJFAMILY_FIELD_EXPENSE_PRICEORIG_LABEL"
            format="LIB_GBJ_FIELD_PRICE_FORMAT"
            prefix="id_currency_alias"
            class="gbj-right"
            labelclass="gbj-right"
            defaulted="false"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
        >
        </field>

        <field
            name="id_currency"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_CURRENCY_LABEL"
            datafield="id_currency_alias"
            tooltip="id_currency_title"
        >
        </field>

        <field
            name="id_commodity"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_COMMODITY_LABEL"
            datafield="id_commodity_alias"
            tooltip="id_commodity_title"
        >
        </field>

        <field
            name="id_type"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_TYPE_LABEL"
            datafield="id_type_alias"
            tooltip="id_type_title"
        >
        </field>

        <field
            name="id_unit"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_UNIT_LABEL"
            datafield="id_unit_alias"
            tooltip="id_unit_title"
        >
        </field>

        <field
            name="id_vendor"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_VENDOR_LABEL"
            datafield="id_vendor_alias"
            tooltip="id_vendor_title"
        >
        </field>

        <field
            name="id_location"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_LOCATION_LABEL"
            datafield="id_location_alias"
            tooltip="id_location_title"
        >
        </field>

        <field
            name="id_project"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_PROJECT_LABEL"
            datafield="id_project_alias"
            tooltip="id_project_title"
        >
        </field>

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
