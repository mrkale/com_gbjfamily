<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Defaul type for searching is string. -->
        <field
            name="title"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="date_on"
            type="date"
            label="LIB_GBJ_FIELD_DATE_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
            width="15%"
        />

        <field
            name="value"
            type="number"
            label="COM_GBJFAMILY_FIELD_ASSET_VALUE_LABEL"
            class="pull-right"
            labelclass="gbj-right"
        />

        <field
            name="price"
            type="number"
            label="LIB_GBJ_FIELD_PRICE_LABEL"
            class="pull-right"
            labelclass="gbj-right"
        />

        <field
            name="price_orig"
            type="number"
            label="COM_GBJFAMILY_FIELD_ASSET_PRICEORIG_LABEL"
            prefix="id_currency_alias"
            class="pull-right"
            defaulted="false"
        />

        <field
            name="id_currency"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_CURRENCY_LABEL"
            width="6%"
            datafield="id_currency_alias"
            tooltip="id_currency_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_asset"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_ASSET_LABEL"
            datafield="id_asset_alias"
            tooltip="id_asset_title"
            defaulted="false"
        >
        </field>

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
