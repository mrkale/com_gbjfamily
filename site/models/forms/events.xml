<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Defaul type for searching is string. -->
        <field
            name="title"
            label="COM_GBJFAMILY_FIELD_EVENT_TITLE_LABEL"
            labelclass="title"
            class="title"
        />

        <field
            name="date_on"
            type="date"
            label="COM_GBJFAMILY_FIELD_EVENT_DATEON_LABEL"
            width="15%"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="duration"
            type="number"
            label="COM_GBJFAMILY_FIELD_EVENT_DURATION_LABEL"
            width="6%"
        />

        <field
            name="id_domain_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_activity_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_ACTIVITY_LABEL"
            tooltip="id_activity_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_stage_alias"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAGE_LABEL"
            tooltip="id_stage_title"
            defaulted="false"
        >
        </field>

        <field
            name="grid_site"
            type="subform"
        />

    </fieldset>
</form>
