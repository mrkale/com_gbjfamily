<form>

	<fields name="filter">

		<field name="site" type="subform" />

		<field name="year" type="year" datafield="date_on" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_YEAR</option>
		</field>

		<field name="month" type="month" datafield="date_on" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_MONTH</option>
		</field>

		<field name="yearoff" type="yearoff" datafield="date_off" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_YEAROFF</option>
		</field>

		<field name="monthoff" type="monthoff" datafield="date_on" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_MONTHOFF</option>
		</field>

		<field name="id_unit" type="unit" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_UNIT</option>
		</field>

		<field name="id_domain" type="domain" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_DOMAIN</option>
		</field>

		<field name="id_info" type="info" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_INFO</option>
		</field>

		<field name="id_project" type="project" onchange="this.form.submit();">
			<option value="">COM_GBJFAMILY_SELECT_PROJECT</option>
		</field>

	</fields>

	<fields name="list">

		<field name="fullordering" type="hidden" default="title ASC" />

		<field name="limit" type="limitbox" class="input-mini" default="20" label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL" description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC" onchange="this.form.submit();" />

	</fields>

</form>