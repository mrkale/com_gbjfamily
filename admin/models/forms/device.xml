<form>
    <fieldset name="recordfields">

        <field
            name="title"
            type="text"
            class="input-xxlarge input-large-text"
            label="COM_GBJFAMILY_FIELD_DEVICE_TITLE_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_TITLE_DESC"
            required="true"
        />

        <field
            name="alias"
            type="text"
            class="inputbox"
            label="COM_GBJFAMILY_FIELD_DEVICE_ALIAS_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_ALIAS_DESC"
            size="30"
            defaulted="false"
        />

        <field
            name="brandname"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_BRANDNAME_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_BRANDNAME_DESC"
            size="30"
            required="true"
            default="n.a."
        />

        <field
            name="serial"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_SERIAL_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_SERIAL_DESC"
        />

        <field
            name="eth_mac"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_ETHMAC_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_ETHMAC_DESC"
        />

        <field
            name="eth_ip4"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_ETHIP4_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_ETHIP4_DESC"
        />

        <field
            name="wifi_mac"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_WIFIMAC_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_WIFIMAC_DESC"
        />

        <field
            name="wifi_ip4"
            type="text"
            label="COM_GBJFAMILY_FIELD_DEVICE_WIFIIP4_LABEL"
            description="COM_GBJFAMILY_FIELD_DEVICE_WIFIIP4_DESC"
        />

        <field
            name="id_network"
            type="network"
            class="inputbox span6"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_NETWORK_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_NETWORK_DESC"
            default="0"
        >
        </field>

        <field
            name="id_device"
            type="device"
            class="inputbox span6"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DEVICE_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_DEVICE_DESC"
            default="0"
        >
        </field>

        <field
            name="id_vendor"
            type="vendor"
            class="inputbox span6"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_VENDOR_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_VENDOR_DESC"
            default="0"
        >
        </field>

        <field
            name="id_location"
            type="location"
            class="inputbox span6"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_LOCATION_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_LOCATION_DESC"
            default="0"
        >
        </field>

        <field
            name="update_admin"
            type="subform"
        />

    </fieldset>
</form>
