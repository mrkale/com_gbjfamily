<form>
    <fieldset name="recordfields">

        <field
            name="title"
            type="text"
            class="input-xxlarge input-large-text"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            description="LIB_GBJ_FIELD_TITLE_DESC"
            required="true"
        />

        <field
            name="date_on"
            type="calendar"
            class="input-xxlarge input-large-text span5"
            label="LIB_GBJ_FIELD_DATEON_LABEL"
            description="LIB_GBJ_FIELD_DATEON_DESC"
            format="%d.%m.%Y"
            translateformat="false"
            showtime="false"
            todaybutton="true"
            filter="none"
            required="true"
        />

        <field
            name="date_off"
            type="calendar"
            class="input-xxlarge input-large-text span5"
            label="LIB_GBJ_FIELD_DATEOFF_LABEL"
            description="LIB_GBJ_FIELD_DATEOFF_DESC"
            format="%d.%m.%Y"
            translateformat="false"
            showtime="false"
            todaybutton="true"
            filter="none"
            required="true"
        />

        <field
            name="id_stay"
            type="Stay"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAY_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_STAY_DESC"
            default="0"
        >
        </field>

        <field
            name="id_staff"
            type="Staff"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAFF_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_STAFF_DESC"
            default="0"
        >
        </field>

        <field
            name="update_admin"
            type="subform"
        />

    </fieldset>
</form>
