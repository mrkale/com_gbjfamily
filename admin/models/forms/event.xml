<form>
    <fieldset name="recordfields">

        <field
            name="title"
            type="text"
            class="input-xxlarge input-large-text"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            description="LIB_GBJ_FIELD_TITLE_DESC"
            required="true"
        />

        <field
            name="date_on"
            type="calendar"
            class="input-xxlarge input-large-text span5"
            label="LIB_GBJ_FIELD_DATE_LABEL"
            description="LIB_GBJ_FIELD_DATE_DESC"
            format="%d.%m.%Y"
            translateformat="false"
            showtime="false"
            todaybutton="true"
            filter="none"
            required="true"
        />

        <field
            name="duration"
            type="number"
            class="inputbox span2"
            label="COM_GBJFAMILY_EVENT_DURATION_LABEL_UNIT"
            description="COM_GBJFAMILY_EVENT_DURATION_DESC"
            min="0.25"
            max="24.00"
            step="0.25"
            hint="JNONE"
        />

        <field
            name="id_domain"
            type="domain"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_DESC"
            default="0"
        >
        </field>

        <field
            name="id_activity"
            type="activity"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_ACTIVITY_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_ACTIVITY_DESC"
            default="0"
        >
        </field>

        <field
            name="id_stage"
            type="stage"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAGE_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_STAGE_DESC"
            default="0"
        >
        </field>

        <field
            name="id_project"
            type="project"
            class="inputbox span4"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_PROJECT_LABEL"
            description="COM_GBJFAMILY_FIELD_CODEBOOK_PROJECT_DESC"
            default="0"
        >
        </field>

        <field
            name="update_admin"
            type="subform"
        />

    </fieldset>
</form>
