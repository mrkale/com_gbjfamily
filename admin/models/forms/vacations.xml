<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Default type for searching is string. -->
        <field
            name="title"
            type="string"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="has-context"
        />

        <field
            name="date_on"
            type="date"
            label="LIB_GBJ_FIELD_DATEON_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="date_off"
            type="date"
            label="LIB_GBJ_FIELD_DATEOFF_LABEL"
            format="LIB_GBJ_FORMAT_DATE_LONG"
        />

        <field
            name="period"
            type="number"
            label="LIB_GBJ_FIELD_PERIOD_LABEL"
            format="LIB_GBJ_FIELD_PERIOD_FORMAT"
/>

        <field
            name="id_stay"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAY_LABEL"
            datafield="id_stay_alias"
            tooltip="id_stay_title"
            defaulted="false"
        >
        </field>

        <field
            name="id_staff"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_STAFF_LABEL"
            datafield="id_staff_alias"
            tooltip="id_staff_title"
            defaulted="false"
        >
        </field>

        <field
            name="grid_admin"
            type="subform"
        />

    </fieldset>
</form>
