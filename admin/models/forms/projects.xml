<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Default type for searching is string. -->
        <field
            name="title"
            type="string"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="has-context"
        />

        <field
            name="alias"
            type="string"
            label="LIB_GBJ_FIELD_ALIAS_LABEL"
            width="10%"
        />

        <field
            name="id_domain"
            label="COM_GBJFAMILY_FIELD_CODEBOOK_DOMAIN_LABEL"
            width="6%"
            datafield="id_domain_alias"
            tooltip="id_domain_title"
            defaulted="false"
        >
        </field>

        <field
            name="expenses"
            type="number"
            label="COM_GBJFAMILY_EXPENSES_STATS_LABEL"
            default="LIB_GBJ_SELECT_NONE"
            variants="#,_total"
            width="10%"
        />

        <field
            name="expenses_price"
            type="number"
            label="LIB_GBJ_FIELD_PRICE_LABEL"
            defaulted="false"
            variants="#,_total"
        />

        <field
            name="events"
            type="number"
            label="COM_GBJFAMILY_EVENTS_STATS_LABEL"
            default="LIB_GBJ_SELECT_NONE"
            variants="#,_total"
            width="10%"
        />

        <field
            name="events_duration"
            type="number"
            label="COM_GBJFAMILY_EVENT_DURATION_LABEL"
            defaulted="false"
            variants="#,_total"
        />

        <field
            name="incomes"
            type="number"
            label="COM_GBJFAMILY_INCOMES_STATS_LABEL"
            default="LIB_GBJ_SELECT_NONE"
            variants="#,_total"
            width="10%"
        />

        <field
            name="incomes_price"
            type="number"
            label="LIB_GBJ_FIELD_PRICE_LABEL"
            defaulted="false"
            variants="#,_total"
        />

        <field
            name="grid_admin"
            type="subform"
        />

    </fieldset>
</form>
